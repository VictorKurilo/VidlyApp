@model VidlyApp.Models.Customer

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul class="list-group">
    <li class="list-group-item">Membership Type: @Model.MembershipType.Name</li>
    @if (Model.BirthDate.HasValue)
    {
        <li class="list-group-item">Birthday: @Model.BirthDate.Value.ToShortDateString()</li>
    }
</ul>