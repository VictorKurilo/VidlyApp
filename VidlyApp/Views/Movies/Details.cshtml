@model VidlyApp.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul class="list-group">
    <li class="list-group-item">Genre: @Model.Genre.Name</li>
    <li class="list-group-item">Release Date: @Model.ReleaseDate.ToString("D")</li>
    <li class="list-group-item">Date Added: @Model.DateAdded.ToLongDateString()</li>
    <li class="list-group-item">Number in Stock: @Model.Stock</li>
</ul>
